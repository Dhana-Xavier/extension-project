{
  "manifest_version": 3,
  "name": "Hashtag and Caption Generator",
  "version": "1.1",
  "description": "Generate AI-powered captions, hashtags, and prompt suggestions with image analysis.",
  "icons": {
    "48": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://generativelanguage.googleapis.com/ https://api.imgbb.com/;"
  }
}